<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste des Cocktails</title>
    <%- include('partials/header') %>
</head>
<body>
    <div class="container">
        <h1>Liste des Cocktails</h1>

        <div class="cocktail-grid">
            <% if (cocktails && cocktails.length > 0) { %>
                <% cocktails.forEach(cocktail => { %>
                    <div class="cocktail-card">
                        <% if (cocktail.image) { %>
                            <img src="<%= cocktail.image %>" class="cocktail-image" alt="<%= cocktail.name %>">
                        <% } else { %>
                            <div class="cocktail-image-placeholder">
                                <span>Image non disponible</span>
                            </div>
                        <% } %>
                        <div class="cocktail-content">
                            <h2 class="cocktail-title"><%= cocktail.name %></h2>
                            <p class="cocktail-description"><%= cocktail.description %></p>
                        </div>
                        <div class="cocktail-footer">
                            <a href="/cocktailDetail?id=<%= cocktail.id %><%= research ? '&research=' + research : '' %>" class="btn btn-primary">Voir les détails</a>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="alert alert-info">
                    Aucun cocktail trouvé.
                </div>
            <% } %>
        </div>
    </div>
</body>
</html>