<style>
    body {
        padding-top: 3.5%; /* Ajustez cette valeur en fonction de la hauteur de votre navbar */
    }
    
    #session-message {
    position: fixed;
    top: 10%; /* Position verticale à 10% du haut */
    left: 50%; /* Centrage horizontal */
    transform: translateX(-50%); /* Décalage de 50% de la largeur de l'élément */
    z-index: 1050; /* Assurez-vous que l'alerte soit au-dessus des autres éléments */
}
</style>

<script>
   const tempMessage = <%- JSON.stringify(tempMessage) %>;
</script>

<script>
    window.onload = function () {
        if (tempMessage) {
            const messageBox = document.getElementById('session-message');
            const messageText = document.getElementById('session-message-text');
            messageText.textContent = tempMessage;
            messageBox.style.display = 'block';

            setTimeout(() => {
                messageBox.classList.remove('show');
                setTimeout(() => {
                    messageBox.style.display = 'none';
                }, 500);
            }, 5000);
        }
    };
</script>
