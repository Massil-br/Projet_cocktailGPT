<%- include('partials/header') %>

<div class="container mt-4">
    <h1 class="mb-4">Liste des Cocktails</h1>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% cocktails.forEach(cocktail => { %>
            <div class="col">
                <div class="card h-100">
                    <% if (cocktail.image) { %>
                        <img src="<%= cocktail.image %>" class="card-img-top" alt="<%= cocktail.name %>">
                    <% } else { %>
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="fas fa-glass-martini-alt fa-3x text-muted"></i>
                        </div>
                    <% } %>
                    <div class="card-body">
                        <h5 class="card-title"><%= cocktail.name %></h5>
                        <p class="card-text"><%= cocktail.description %></p>
                    </div>
                    <div class="card-footer">
                        <a href="/cocktails/<%= cocktail.id %>" class="btn btn-primary">Voir les d√©tails</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<%- include('partials/footer') %> 